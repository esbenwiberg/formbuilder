{
    "$schema": "http://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "Node",
        "lib": ["es2017", "dom"]
    }
}



